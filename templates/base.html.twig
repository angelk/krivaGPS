<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        {% include "include/head.html.twig" %}
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </head>
    <body>
        <nav class="container-fluid">
            <div class="row">
                <div class="col">
                    <a href="{{ path('home') }}">{{ 'Home'|trans }}</a>
                    |
                    <a href="{{ path('gps-new') }}">{{ 'Add track'|trans }}</a>
                    |
                    <a href="{{ path('app_places') }}">{{ 'Places'|trans }}</a>
                    |
                    <a href="{{ path('app_place_new') }}">{{ 'Add place'|trans }}</a>
                </div>

                <div class="col">
                    {% if app.user %}
                        {{ app.user.username }}
                        |
                        <a href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a>
                        |
                        <a href="{{ path('app_user_download_personal_data') }}">
                            Download personal data
                        </a>
                        |
                        <a href="{{ path('app_user_delete') }}">
                            Delete account
                        </a>
                    {% else %}
                        <a href="{{ path("hwi_oauth_connect") }}">{{ 'Log in'|trans }}</a>
                    {% endif %}
                </div>

                <div class="col">
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'}))}}">en</a>
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'bg'}))}}">bg</a>
                </div>
            </div>
            <hr>
        </nav>
        {% block content %}{% endblock %}
        <hr>

        {% include "include/footer.html.twig" %}
        {% include "include/foot.html.twig" %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
